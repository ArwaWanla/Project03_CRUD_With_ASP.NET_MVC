
@{ 
    var rooms = (List<Room>)ViewData["rooms"];
}

<table class="table">
    <thead>
        <tr>
            <th scope=" col">Room Number</th>
            <th scope=" col">Room Type</th>
            <th scope=" col">Room Locatin</th>
            <th scope=" col">Room Rate</th>
            <th scope=" col">Number of Beds</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var r in rooms)
            {
        <tr>
            <td scope="row">@r.RoomNumber</td>
            <td scope="row">@r.RoomType</td>
            <td scope="row">@r.RoomLocation</td>
            <td scope="row">@r.RoomRate</td>
            <td scope="row">@r.NumberOfBeds</td>


            <td><button type="button" class="btn btn-dark"><a style="color:white" href="/rooms/details/@r.RoomNumber">SHOW</a></button></td>
            <td><a class="btn btn-primary" asp-controller="Rooms" asp-action="Edit" asp-route-id=@r.RoomNumber>Edit</a></td>
            <td>
                <form method="post" asp-controller="Rooms" asp-action="Delete" asp-route-id="@r.RoomNumber">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>

            </td>


        </tr>
            }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Rooms" asp-action="Create"> Add New Room</a>